@model WebApp.ViewModels.SuperViewModel.AtribuirFuncaoViewModel

@{
    ViewData["Title"] = "AtribuirFuncao";
}

<h1>AtribuirFuncao</h1>

<h4>AtribuirFuncaoViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AtribuirFuncao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <input asp-for="UsuarioId" class="form-control" />
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class="form-control">
                    @foreach (var item in Model.Roles)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
