@model WebApp.ViewModels.EstudanteViewModel.EstudanteVm

@{
    ViewData["Title"] = "Cursos";
}

<h1>Cursos</h1>

<div>
    <div class="card">
        <div class="card-body">
            <h3>Dados do estudante</h3>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Sobrenome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Sobrenome)
                </dd>
            </dl>
        </div>
    </div>
    <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Duração</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Cursos)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.Id)</td>
                    <td>@Html.DisplayFor(model => item.Nome)</td>
                    <td>@Html.DisplayFor(model => item.DuracaoMeses)</td>
                </tr>
            }
            </tbody>
        </table>
</div>
<div>
    @Html.ActionLink("Editar", "Editar", new {  id = Model.Id }) |
    <a asp-action="Index">Retornar</a>
</div>
