@model WebApp.ViewModels.EstudanteViewModel.EstudanteVm

@{
    ViewData["Title"] = "Cursos";
}

<h1>Cursos</h1>

<div>
    <h4>EstudanteVm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>
        <table class="table">
            <thead>
            <tr>
                <th>
                    
                </th>
                <th>
                    
                </th>
            </tr>
            </thead>
            <tbody>
          @foreach (var item in Model.Cursos)
          {
              <tr>
                  <td>
                      @Html.DisplayFor(model => item.Nome)
                  </td>
                  <td>
                      @Html.DisplayFor(model => item.Descricao)
                  </td>
              </tr>
          }
            </tbody>
        </table>

        
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Editar", new {  id = Model.Id }) |
    <a asp-action="Index">Retornar</a>
</div>
