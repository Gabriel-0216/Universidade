@model WebApp.ViewModels.EstudanteViewModel.EstudanteVm

@{
    ViewData["Title"] = "Contratos";
}

<h1>Contratos</h1>
<div>
    <hr />
    <div class="card">
        <div class="card-body">
            <h4>Dados do estudante</h4>
            <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Sobrenome)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Sobrenome)
                    </dd>
            <dt class="col-sm-10">
                Contratos:
            </dt>
            </dl>
        </div>
    </div>
    <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Ativo</th>
                <th>Quitado</th>
                <th>Data geração</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Contratos)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.Id)</td>
                    <td>@Html.DisplayFor(model => item.Ativo)</td>
                    <td>@Html.DisplayFor(model => item.Quitado)</td>
                    <td>@Html.DisplayFor(model => item.DataGeracao)</td>
                    <td>
                        <a title="Mensalidades" href="@Url.ActionLink("Mensalidades", "Contrato", new {id = item.Id})">
                            <i class="fa-solid fa-file-contract"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
</div>
<div>
    @Html.ActionLink("Editar", "Editar", new {  id = Model.Id }) |
    <a asp-action="Index">Retornar</a>
</div>
