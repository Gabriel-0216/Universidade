@model WebApp.ViewModels.ContratoViewModel.ContratoVm

@{
    ViewData["Title"] = "Mensalidades";
}

<h1>Mensalidades</h1>

<p>
    <a @*}asp-action="Create">*@>Create New</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Número parcela
            </th>
            <th>
                Valor
            </th>
            <th>
                Data vencimento
            </th>
            <th>
                Pago
            </th>
            <th>
                Opções
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Parcelas) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.NumeroParcela)
            </td>
            <td>
                @Html.DisplayFor(model => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(model => item.DataVencimento)
            </td>
            <td>
                @Html.DisplayFor(model => item.Pago)
            </td>
            <td>
                <a href="#">Arrecadação</a>
            </td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <td>
            Qtde. Parcelas: @Html.DisplayFor(item => Model.Parcelas.Count)
        </td> 
        <td>
            Valor total: @Model.Parcelas.Sum(p=> p.Valor)
        </td>
      
    </tr>
    </tfoot>
</table>
